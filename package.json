{
	"name": "vite-plugin-sdk",
	"version": "0.1.1",
	"description": "Vite plugin to bundle SDKs",
	"keywords": [
		"typescript",
		"vite-plugin"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio-community/vite-plugin-sdk.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"prepare": "npm run build",
		"release": "npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:alpha": "npm run test && standard-version --release-as patch --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as patch --prerelease alpha --dry-run",
		"release:dry": "standard-version --dry-run",
		"test": "npm run lint && npm run types && npm run unit && npm run build && npm run size",
		"lint": "eslint --ext .js,.ts .",
		"format": "prettier --write .",
		"types": "tsc --noEmit",
		"unit": "vitest run --coverage",
		"unit:watch": "vitest watch",
		"size": "size-limit"
	},
	"dependencies": {
		"@rollup/plugin-typescript": "^11.1.5",
		"defu": "^6.1.3",
		"fs-extra": "^11.2.0",
		"rollup-plugin-rename-node-modules": "^1.3.1"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.0.1",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/fs-extra": "^11.0.4",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"@vitest/coverage-c8": "^0.25.8",
		"@vitest/coverage-v8": "^1.0.4",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-tsdoc": "^0.2.17",
		"prettier": "^3.1.1",
		"prettier-plugin-jsdoc": "^1.1.1",
		"size-limit": "^11.0.1",
		"standard-version": "^9.5.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.7",
		"vitest": "^1.0.4"
	},
	"peerDependencies": {
		"vite": "^4 || ^5"
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
